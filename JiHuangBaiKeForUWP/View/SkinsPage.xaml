                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>
                </GridView>
            </uc:Expander>
            <uc:Expander x:Name="EmotesExpander" VerticalAlignment="Top" FontSize="17" Tapped="Expander_Tapped">
                <uc:Expander.Header>
                    <StackPanel Orientation="Horizontal" Height="47">
